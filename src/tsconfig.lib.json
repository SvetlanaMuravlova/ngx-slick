{
  "extends": "./../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/ngx-slick/",
    "target": "es2015",
    "declaration": true,
    "declarationMap": false,
    "inlineSources": true,
    "types": [],
    "lib": ["dom", "es2018"]
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true
  },
  "include": ["./*.ts"]
}
